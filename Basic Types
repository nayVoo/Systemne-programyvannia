fn main() {
    let x: i32 = 5; // Ціле число
    let y: f64 = 3.14; // Число з плаваючою комою
    let is_active: bool = true; // Логічний тип
    let letter: char = 'A'; // Символ

    let arr: [i32; 3] = [1, 2, 3]; // Масив
    let vec: Vec<i32> = vec![1, 2, 3]; // Вектор
    let tuple: (i32, f64, &str) = (5, 4.5, "Hello"); // Кортеж

    println!("x: {}, y: {}, is_active: {}, letter: {}", x, y, is_active, letter);
}
